pipeline {
    agent {
        node {
            label 'master'
        }
    }

    stages {
        stage('Check Style') {
            steps {
                dir("greeting-service") {
                    sh 'ls -l'
                    sh './mvnw checkstyle:check'
                }
            }
        }

        stage('Test') {
            steps {
                dir("greeting-service") {
                    sh './mvnw test'
                }
            }
        }
    }

}